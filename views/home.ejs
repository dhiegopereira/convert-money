<%- include('header') %>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <a href="/"><img src="images/logo.png" class="brand_logo" alt="Convert My Money"></a>
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form method="GET" action="/quotation">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="text" name="quotation" class="form-control input_user"  placeholder="Dollar quotation" value="<%= cotacao %>">
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="text" name="amount" class="form-control input_pass"  placeholder="Dollar amount">
                    </div>
                    <div class="input-group mb-2">
                            <button name="button" class="btn login_btn">convert</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>