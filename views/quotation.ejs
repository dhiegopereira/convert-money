<%- include('header') %>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <a href="/"><img src="images/logo.png" class="brand_logo" alt="Convert My Money"></a>
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">                
                <form>
                    <% if(error){ %>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text">Error</span>
                        </div>
                        <input disabled type="text" name="quotation" class="form-control input_user" value="<%= error %>" placeholder="Dollar quotation">
                    </div>
                    <% }else{ %>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text">Quotation</span>
                        </div>
                        <input disabled type="text" name="quotation" class="form-control input_user" value="$ <%= quotation %>" placeholder="Dollar quotation">
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text">Amount</span>
                        </div>
                        <input disabled type="text" name="amount" class="form-control input_pass" value="$<%= amount %>"  placeholder="Dollar amount">
                    </div>
                    <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text">Conversion</span>
                            </div>
                            <input disabled type="text" name="conversion" class="form-control input_pass" value="R$ <%= conversion %>"  placeholder="Dollar amount">
                    </div>
                    <% } %>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>